<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="10dp" android:paddingRight="10dp"
            android:background="#f2f2f2"
            android:paddingTop="10dp" android:paddingBottom="10dp">
        <TextView
                android:text="Nazwa produktu:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/nameTextView" android:textSize="18sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/nameEditText" android:hint="Podaj nazwę produktu"/>
        <TextView
                android:text="Kcal w 100g:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/kcalTextView" android:textSize="18sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/kcalEditText" android:hint="Podaj kalorie w kcal"/>
        <TextView
                android:text="Białka w 100g:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/proteinTextView" android:textSize="18sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/proteinEditText" android:hint="Podaj zawartość białek w 100g"/>
        <TextView
                android:text="Węglowodany w 100g:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/carbsTextView" android:textSize="18sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/carbsEditText" android:hint="Podaj zawartość węglowodanów w 100g:"/>
        <TextView
                android:text="Tłuszcze w 100g:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/fatTextView" android:textSize="18sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/fatEditText" android:hint="Podaj zawartość tłuszczy w 100g"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>