<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/image_gallery"/>
    <TextView
            android:text="Date: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/date_gallery"
            android:textColor="@color/white"/>
</LinearLayout>